{
  /* 27017 -> mongodb default ayaga kaltıgı port, localde calisiyorum
  * dockerda ayaga kaldırdıgımda localhost diye birsey yok
  * dockerize etiigimde environment degisken belirlicem cs'yi ezicem
  * localhost yerinde dockercompose dosyamdaki servisin ismi gelicek
  */

  "DatabaseSettings": {
    "CourseCollectionName": "Courses",
    "CategoryCollectionName": "Category",
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "CatalogDb"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}

